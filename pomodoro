import time

def pomodoro_timer():
    try:
        focus_minutes = int(input("â³ How many minutes do you want to focus? (Default: 25) ") or 25)
        rest_minutes = int(input("ğŸ’¤ How many minutes do you want to rest? (Default: 5) ") or 5)
        while True:
            print(f"\nğŸŸ¢ Time to focus! Stay on task for {focus_minutes} minutes.")
            countdown(focus_minutes)

            print(f"\nâ³ Take a break! Relax for {rest_minutes} minutes.")
            countdown(rest_minutes)

            cont = input("ğŸ”„ Do you want to start another Pomodoro? (yes/no): ").strip().lower()
            if cont != "yes":
                print("\nğŸ‰ Great job today! Keep up the good work. See you next time!")
                break

    except ValueError:
        print("âŒ Oops! Please enter a valid number for the timer.")

def countdown(minutes):
    for i in range(minutes, 0, -1):
        print(f" â³ {i} minutes left...", end="\r")
        time.sleep(60)  # Pause for a minute
    print("â° Time's up!                ")

pomodoro_timer()
